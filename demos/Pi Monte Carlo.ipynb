    "import random\n",
    "def approxPi(numSamples):\n",
    "    counter = 0\n",
    "    for s in range(0, numSamples):\n",
    "        x = random.uniform(-1,1)\n",
    "        y = random.uniform(-1,1)\n",
    "        if(((x*x) + (y*y)) < 1):\n",
    "            counter += 1\n",
    "    return 4 * counter / numSamples"
   ]
